extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'HTML Introductorio'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/workshop.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Detalles
				p Nota IMPORTANTE: Este no es un curso más ya que está integrado como parte del Módulo, solo es un tiempo
					| reservado para la realización de un proyecto donde podrás integrar todos
					| los conocimientos aprendidos bajo la supervisión del profesor.
			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Que aprenderas?
			ul
				li Integrar todos los conocimientos adquiridos.
				li Adquirás experiencia al trabajar en un proyecto.
				li Simularemos lo que pasa en un entorno laboral real.
			h2 Objetivo
			p Dar la oportunidad a los estudiantes de participar en un proyectos donde emulando lo que pasa en un entorno laboral
				| puedan integrar todos los conocimientos adquiridos en el Módulo.
			h2 Requisitos
			p Haber terminado todos los cursos correspondientes al módulo ya que estos conocimientos son los que se integrarán en el proyecto.
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse en el mundo de la tecnologia web y que tengan terminados los cursos correspondientes a la Módulo
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Temario
				ul.feature-list
					li Enunciado del Proyecto
					li Toma de Requerimientos
					li Seguimiento del Proyecto
					li Presentación del Proyecto
block main-container
block main-footer
block scripts
