extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'HTML5 Intermedio'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_html_avanzado.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Etiquetado con SVG
					li Alternativas de creacion de contenido (Markdown)
					li elementos de Multimedia
			// Contenido de la columna 2
	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Objetivo
			p Dar las herramientas necesarias tanto teoricas como practicas para avanzar en temas mas profundos de HTML5
				|
			h2 Requisitos
			p Debes tener los conocimientos sólidos adquiridos en el Módulo Front End Introductorio como:
				ul
					li HTML5 Introductorio
					li CSS Introductorio
					li JavaScript Introductorio
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse en el mundo de la tecnologia web, pueden venir del area de diseño
				| como de la parte de desarrollo de Software.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Multimedia
				ul.feature-list
					li Audio
					li Video
					li Usando API de la Cámara
			details
				summary SVG
				ul.feature-list
					li Formas Basicas
					li DOM SVG
					li Transformaciones
					li Paths
					li Degradados
					li Textos
					li Mascaras
					li Recortes
					li Iconos
					li SVG Responsive
					li Animaciones SVG
			details
				summary Markdown
				ul.feature-list
					li Encabezados, parrafos y listas
					li Imagenes y enlaces
					li Código
					li Texto
					li Tablas
					li Editores online
					li Herramientas para escritores
					li Herramientas para programadores
					li Apliaciones de notas
					li Herramientas con soporte markdown

block main-container
block main-footer
block scripts 




