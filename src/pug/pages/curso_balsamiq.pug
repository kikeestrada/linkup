extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Adobe XD'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_balsamiq.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Patrones de diseño y buenas prácticas
					li Fundamentos del diseño UI
					li Uso de la psicología en el diseño
					li Color y tipografía
			// Contenido de la columna 2
	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Objetivo
			p Capacitar al estudiante con las bases principales necesarias para entender el uso de Adobe XD y la teoría que encierra al diseño
				| y orientarla al los dispositivos sobre los cuales vamos a trabajar: los navegadores y los dispositivos mobiles.
			p Para este curso no requieres tener conocimientos en Adobe XD pero es escencial tener los conocimientos adquiridos en los cursos:
			ul
				li HTML Introductorio
				li CSS Introductorio
				li CSS Intermedio
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse y actualizarse en el mundo de la tecnologia web.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Dibujo vectorial
				ul.feature-list
					li Trabajando con formas
					li Alineación y distribución de formas
					li Operaciones con formas
					li Manejando textos
					li Creando máscaras
					li Dibujando con la pluma
					li Practicando con la herramienta pluma


			details
				summary Conociendo Adobe Xd
				ul.feature-list
					li ¿Qué es Adobe Xd?
					li ¿Qué se puede hacer con Adobe Xd?
					li ¿Qué no se puede hacer con Adobe Xd?
					li ¿Qué es UI/UX?
					li Flujo de trabajo
					li Instalación y homepage
					li Espacio de trabajo y herramientas
					li Mesas de trabajo
					li Manejo de las formas


			details
				summary Trabajar con elementos reutilizables
				ul.feature-list
					li Crear componentes reutilizables
					li Uso de los componentes
					li Creando paletas de colores
					li Estilos de caracteres
					li Adobe fonts

			details
				summary Herramientas avanzadas de diseño
				ul.feature-list
					li Aprendiendo responsive resize
					li Practicando responsive resize
					li Aplicando responsive resize a botones
					li Repeat grid
					li Integración con la suite de Adobe
					li Exportación e importación


			details
				summary Prototipado
				ul.feature-list
					li ¿Qué es el prototipado?
					li ¿Cómo se hace el prototipado?
					li Conociendo las opciones de interacción
					li Copiar elementos con sus interacciones
					li Ejercicio: Creación de un Login
					li Ejercicio: Crear interacción de Registro y Bienvenida
					li Interacciones con comandos de voz
					li Interacciones con comandos de teclado
					li Overlay y cómo aplicarlo
					li Creando un menu de más opciones
					li Creando un menú desplegable
					li Drag y autoanimate


			details
				summary Colaboración
				ul.feature-list
					li Compartir con otros diseñadores
					li Compartir con clientes
					li Compartir con programadores
					li Publicar en internet

			details
				summary Sistemas de diseño
				ul.feature-list
					li ¿Qué son los sistemas de diseño?
					li Documentación y componentes
					li ¿Cómo escoger paletas de colores?
					li Tipografías
					li Definir los usos de color y tipografía
					li Crear librería de componentes reutilizables
					li Linked assets


			details
				summary Plugins, integraciones y kits
				ul.feature-list
					li UI kits
					li Integraciones
					li Plugins


block main-container
block main-footer
block scripts

