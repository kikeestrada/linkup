extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Desarrollo Web Avanzado'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.l-section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Desarrollo Web Avanzado
				p Cursos de Actualizacion en Tecnologia
			// Contenido de la columna 2
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="assets/img/esp_desarrollo_web_intermedio.jpg")
	div(class='ed-container')
		div(class='ed-item l-75')
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_pug.html')
							img(src='./assets/img/curso_pug.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li ¿Que es Pug?
						li Sintaxis de Pug
						li Implementación de codigo Javascript
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_markdown.html')
							img(src='./assets/img/curso_markdown.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Encabezados, parrafos y listas
						li Imagenes y enlaces
						li Apliaciones de notas
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_sass.html')
							img(src='./assets/img/curso_sass.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Sintaxis
						li Ciclos y condicionales
						li Debugging
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_css_animaciones.html')
							img(src='./assets/img/curso_css_animaciones.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Transiciones
						li Transformaciones
						li Animaciones CSS y SVG
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_git.html')
							img(src='./assets/img/curso_git.jpg')
				div(class='ed-item m-50')
					ul.feature-list
						li Introducción a GIT
						li Ramas locales y el historial
