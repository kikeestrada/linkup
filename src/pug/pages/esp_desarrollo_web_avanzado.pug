extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Desarrollo Web Avanzado'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Desarrollo Web Avanzado
				p Este es el siguinete paso que das para convertirte en un experto en desarrollo Web Front End.
			// Contenido de la columna 2
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/esp_desarrollo_web_intermedio.jpg")
	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Descripcion
			p Esta especialidad donde ya tienes los conocimientos basicos en desarrollo web orientado al Front End
				| te incitamos a ir al siguiente nivel adquiriendo conocimientos mas profundos con los cuales puedes automatizar
				| las tareas entrando al mundo de los preprocesadores como Pug y SASS, ademas podras entender como funciona el DOM y el BOM.
		div(class='ed-item l-50')
			h2 Detalles
			ul
				li Duraccion: 1 cuatrimestre.
				li 96 horas - 2 clases semanales de 3 horas
				li Workshop - Proyecto Final.
				li Costo: $ 000.000 ivi.
				li Consulte nuestras facilidades de pago.
