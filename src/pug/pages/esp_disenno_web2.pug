extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Diseño Web 2'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.l-section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Diseño Web 2
				p Cursos de Actualizacion en Tecnologia
			// Contenido de la columna 2
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="assets/img/esp_disenno_web2.jpg")
	div(class='ed-container')
		div(class='ed-item l-75')
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_ui.html')
							img(src='./assets/img/curso_ui.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Fundamentos del diseño UI
						li Leyes de gestalt
						li Patrones de diseño
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_xd.html')
							img(src='./assets/img/curso_xd.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Conociendo Adobe Xd
						li Dibujo vectorial
						li Prototipado
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_figma.html')
							img(src='./assets/img/curso_figma.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li ¿Qué es Figma?
						li Constraints
						li Componentes
block main-container
block main-footer
block scripts



