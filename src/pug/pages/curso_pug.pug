extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Pug'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_pug.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Escribir HTML con sintaxis de pug
					li Crear tus propios templates web con pug
					li Agregarle lógica a tus templates
			// Contenido de la columna 2
	div(class='ed-container')
		div(class='ed-item l-50')

			h2 Objetivo
			p Capacitar al estudiante en uno de los motores de planitllas mas importantes de la actualidad.
				| este esta basado en JS por medio de Node JS y hará mas facil la creación de documentos HTML
			h2 Requisitos
			p Para esta especialidad es obligatorio tener aprobados los primeros tres cursos de Desarrollo Web Introductorio:
				ul
					li HTML introductorio
					li Diseño CSS Introductorio
					li JavaScript Introductorio
			h2 A quien va dirigido?
			p A todos los estudiantes que quieran extender sus conocimientos mas a profundidad y que tengan las habilidades
				| que enumeramos en el curso de Desarrollo Web Introductorio
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Sintaxis de Pug
				ul.feature-list
					li ¿Que es Pug?
					li Compilar Pug
					li Sintaxis de Pug
					li Agregar estilos y scripts
					li Anidaciones y detalles

			details
				summary Logica con PUG
				ul.feature-list
					li Implementación de codigo Javascript
					li Condicionales
					li Ciclos
					li Recorrer Objetos
					li Menu multinivel

			details
				summary Templates con PUG
				ul.feature-list
					li Compilación con prepos
					li Include
					li Estructura de nuestro template
					li Estructura de nuestro template II
					li Implementación de mixins

block main-container
block main-footer
block scripts

