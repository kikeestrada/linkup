extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Firebase'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_firebase.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Consola de administración
					li Autenticación
					li Firestore
					li Mensajes push
					li Hosting
			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-50')

			h2 Objetivo
			p Capacitar al estudiante en una de las herramientas de Backend As a Service mas importantes donde no
				| necesitas conocimientos de backend, solo necesitas consumir el servicio y Firebase lo hace todo
			h2 Requisitos
			p Para este curso es escencial tener los conocimientos adquiridos en los modulos:
			ul
				li Desarrollo Web Introductorio
				li Desarrollo Web Intermedio
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse y actualizarse en el mundo de la tecnologia web.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Introducción Consola Web de Administración
				ul.feature-list
					li Introducción y bienvenida
					li ¿Qué es Firebase?
					li Servicios para la web
					li Integraciones y costos
					li Proyecto del curso
					li Consola y documentación de Firebase

			details
				summary Autenticación de Usuarios
				ul.feature-list
					li Configurar Firebase a nuestro proyecto
					li Iniciando la aplicación
					li Interactuando con las formas de autenticación
					li Enlazar cuentas de inicio de sesión
					li Mensajes de verificación de cuenta
					li Login y logout usando correo
					li Login y logout usando redes sociales
					li Autenticación con Google

			details
				summary Almacenamiento y Recuperacion de datos en Firestore
				ul.feature-list
					li Introducción Firebase Base de datos
					li Colecciones en bases de datos
					li Añadir Firestore al proyecto
					li Creación de indice y recomendaciones
					li Crear entrada vínculo
					li Configurando vínculos
					li Creando vínculos de salida
					li ¿Qué son las reglas?

			details
				summary Almacenamiento y recuperación de archivos en el storage
				ul.feature-list
					li Aclarando puntos sobre Firestore
					li Reglas de Firestore
					li Conociendo Storage
					li Utilizando Storage

			details
				summary Envio de Mensajes Push
				ul.feature-list
					li Tipos de notificaciones
					li Notificaciones background
					li Service worker y solicitar permisos
					li Enviar mensajes a nivel de servidor
					li Registro de token en Base de Datos
					li  Solucionando errores
			details
				summary Hosting
				ul.feature-list
					li Repasando conceptos
					li Hosting
					li Preguntas
					li Performance y hosting

block main-container
block main-footer
block scripts

