extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Programacion Orientada a Objetos'
	-content			= 'content'
	-pageDescription	= 'Programacion Orientada a Objetos'
block main-header
	section.s-py-4.banner-curso 
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/poo.png")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Comprender la programación orientada a objetos
					li Abstraer problemas en objetos 
					li Aplicar este paradigma en distintos lenguajes
			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Descripcion
			p Es un paradigma de la programación muy utilizado que se basa en Objetos. Este usa tecnicás como herencia, 
				| abstracción, poliformismo y encapsulamiento que facilita el diseño de nuestras aplicaciones.
			h2 Objetivo
			p Este curso te enseña la lógica que te permitirá dominar cualquier lenguaje
			h2 Requisitos
			p es Obligatorio ya tener los conocimientos adquiridos en los dos primeros cursos como: Logica y Algoritmos e Introduccion a la Programacion
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse en el mundo de la tecnologia web, pueden venir del area de diseño
				| como de la parte de desarrollo ó no saber absolutamente nada ya que el curso es desde cero.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Temario POO
				ul.feature-list
					li Introduccion
					li Clases, Atributos y Metodos
					li Abstraccion
					li Encapsulamiento
					li Polimorfismo
					li Herencia
			

block main-container
block main-footer
block scripts 




