extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Markdown'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_markdown.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Descripción
				p Escribe código HTML limpio sin preocuparte de las etiquetas ni aprender HTML y
					| aprende marcado ligero con una sintaxis limpia utilizando Markdown
			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-50')
			h2 Detalles
			ul
				li Duraccion: 1 clase de 4 horas
				li Workshop - Proyecto Final.
				li Costo: $ 000.000 ivi.
				li Consulte nuestras facilidades de pago.
			h2 Que aprenderas?
			ul
				li A como crear contenido para tus proyectos con este lenguaje de marcado sencillo.
			h2 Objetivo
			p Capacitar al estudiante en una tecnologia actualizada para la creación de contenido
			h2 Requisitos
			p No requieres tenener ningun conocimiento
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse en el mundo de la tecnologia web, pueden venir del area de diseño
				| como de la parte de desarrollo ó no saber absolutamente nada ya que el curso es desde cero.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Sistaxis
				ul.feature-list
					li Encabezados, parrafos y listas
					li Imagenes y enlaces
					li Código
					li Texto
					li Tablas
			details
				summary Herramientas
				ul.feature-list
					li Editores online
					li Herramientas para escritores
					li Herramientas para programadores
					li Apliaciones de notas
					li Herramientas con soporte markdown
block main-container
block main-footer
block scripts


