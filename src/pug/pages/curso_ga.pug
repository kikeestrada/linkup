extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Google Analytics'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_ga.png")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start
				h1 Que aprenderas?
				ul
					li Crear arquitecturas web que enamoren a Google y al usuario.
					li Analizar el comportamiento de los usuarios en tu web/app.
					li Saber como convertir visitas en clientes, fieles y recurrentes.

			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-50')

			h2 Objetivo
			p Capacitar al estudiante a analizar las visitas a tu sitio y el comportamiento de tus usuarios para convertirlos en clientes.
			h2 Requisitos
			p Para este curso es escencial tener los conocimientos adquiridos en los modulos:
			ul
				li SEO
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse y actualizarse en el mundo de la tecnologia web y em marketing Digital.
		div(class='ed-item l-50')
			h2 Temario
			details
				summary Google Analytics Introductorio
				ul.feature-list
					li Introducción a la Analítica Web y Google Analytics
					li Configuración básica y avanzada + Paneles de GA
					li Informes
					li Interpretación de los informes y acciones a tomar
					li Campañas y conversiones en GA

			details
				summary Google Analytics Avanzado
				ul.feature-list
					li Ecommerce con Google Tag Manager
					li Procesamiento de los datos y configuraciones avanzadas 
					li Análisis Avanzados
					li Remarketing

block main-container
block main-footer
block scripts

