extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Desarrollo Web React JS'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.l-section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Desarrollo Web React JS
				p Cursos de Actualizacion en Tecnologia
			// Contenido de la columna 2
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="assets/img/esp_react.jpg")
	div(class='ed-container')
		div(class='ed-item l-75')
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_reactjs_desde_cero.html')
							img(src='./assets/img/curso_react_desde_cero.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li JSX
						li Componentes
						li React Router
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_reactjs_estado.html')
							img(src='./assets/img/curso_react_manejo_estado.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Redux
						li Context API
						li MobX
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_reactjs_proyecto.html')
							img(src='./assets/img/curso_react_proyecto.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li Estructura, librerías y dependencias
						li Páginas específicas y Build de la aplicación
						li Deployment
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_nextjs.html')
							img(src='./assets/img/curso_nextjs.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li React del lado del Cliente
						li JavaScript del lado del Servidor
						li Mi primer proyecto con NextJS
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_reactjs_ts.html')
							img(src='./assets/img/curso_react_ts.jpg')
				div(class='ed-item m-50')
					h3 Temario
					ul.feature-list
						li React definición de su estructura de componentes
						li TypeScript como herramienta para componentes
						li Creación del primer proyecto con create-react-app
block main-container
block main-footer
block scripts



