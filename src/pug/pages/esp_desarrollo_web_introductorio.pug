extends ../config/template
append config
	-currentPage		= "Curso"
	-siteName			= 'Desarrolloe Web Introductorio'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block main-header
	section.s-py-4.banner-curso
		// Separación del contenido en columnas
		.ed-grid.l-grid-2.row-gap.s-gap-2.m-gap-4
			div
				.img-container.s-ratio-16-9
					img.s-radius-1(src="https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/esp_intro_desarrollo_web.jpg")
			// Contenido de la columna 1
			.s-column.s-main-center.lx-main-start.lx-cross-start.s-center
				h1 Descripción
				p Domina las bases de las 3 tecnologías que te convertirán en desarrollador web que son: HTML, CSS y JS
					| aqui comienza el camino donde construyes las bases que necesitas para adentrarte en el mundo de
					| las tecnologias Web
			// Contenido de la columna 2

	div(class='ed-container')
		div(class='ed-item l-60')
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_html5.html')
							img(src='https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_html.jpg')
				div(class='ed-item m-50')
					ul
						li Etiquetas de contenido
						li Estructura y código
						li Enlaces y listas
						li Tablas
						li Formularios
						li Contenido embebido
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_css_desde_cero.html')
							img(src='https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_css_desde_cero.jpg')
				div(class='ed-item m-50')
					ul
						li Selectores
						li Box model
						li Pseudoclases
						li Position
						li Variables CSS
						li Pseudo elementos
			div(class='ed-container full s-mb-2')
				div(class='ed-item m-50')
					div(class='s-ratio-16-9 img-container s-radius-tl s-radius-tr lg-radius speciality-course__poster')
						a(href='./curso_js_desde_cero.html')
							img(src='https://raw.githubusercontent.com/kikeestrada/linkup/master/public/assets/img/curso_js_desde_cero.jpg')
				div(class='ed-item m-50')
					ul
						li Introducción
						li Sintaxis
						li Operadores
						li Condicionales y ciclos
						li Funciones
						li Colecciones de datos
		div(class='ed-item l-40')
			h2 Detalles
			ul
				li Numero de Cursos: 4
				li Duraccion: 1 cuatrimestre.
				li 96 horas - 2 clases semanales de 3 horas.
				li Workshop - Proyecto Final.
				li Costo: $ 000.000 ivi.
				li Consulte nuestras facilidades de pago.
			h2 Objetivo
			p Dar las herramientas necesarias tanto teoricas como practicas para adentrarse en el mundo de la tecnologia web
				| en las tres tecnologías mas elementales dela web como son: HTML, CSS y JS
			h2 Requisitos
			p No requieres tenener ningun conocimiento ya que este curso la base para los siguientes que son mas avanzados
			h2 A quien va dirigido?
			p A todo a aquel que desee adentrarse en el mundo de la tecnologia web, pueden venir del area de diseño
				| como de la parte de desarrollo ó no saber absolutamente nada ya que el curso es desde cero.
block main-container
block main-footer
block scripts



